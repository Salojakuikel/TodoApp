@model List<TODOApp.Models.TodoDto>
@{
    ViewData["Title"] = "Todos";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">
        List of Todos
    </h1>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            <strong>There are no Todos to display.</strong>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item mb-3 shadow-sm p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 text-success">@item.TaskTitle</h5>
                            <p class="mb-1 text-muted">@item.TaskDescription</p>
                            <small class="text-info">Date: @item.TaskDate</small>
                            <br />
                            <span class="badge bg-secondary">@item.status</span>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-outline-primary me-2" 
                               asp-controller="Todo" 
                               asp-action="Update" 
                               asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" 
                               asp-controller="Todo" 
                               asp-action="Delete" 
                               asp-route-id="@item.Id">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>