@model TODOApp.Models.TodoDto

@{
    ViewBag.Title = "Edit Todo";
    Layout = "_Layout";
}

<h1 class="text-center mt-4">Edit Todo</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="TaskTitle" class="form-label"></label>
                            <input type="text" asp-for="TaskTitle" class="form-control" placeholder="Enter Task Title" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="TaskDescription" class="form-label"></label>
                            <input type="text" asp-for="TaskDescription" class="form-control" placeholder="Enter Task Description" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TaskDate" class="form-label">Due Date</label>
                            <input type="date" asp-for="TaskDate" class="form-control" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Update</button>
                            <a href="@Url.Action("Index", "Todo")" class="btn btn-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
